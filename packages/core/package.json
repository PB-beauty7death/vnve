{
  "name": "@vnve/core",
  "version": "1.0.5",
  "description": "Use PixiJS + Webcodecs to create mp4 videos in browser",
  "main": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/core.umd.js",
    "module": "./dist/core.js",
    "types": "./dist/core.d.ts",
    "exports": {
      ".": {
        "import": "./dist/core.js",
        "require": "./dist/core.umd.js",
        "types": "./dist/core.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "rimraf dist && tsc && vite build",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [
    "visual novel",
    "video editor",
    "video synthesizer",
    "video encoder",
    "canvas to video",
    "webcodecs",
    "pixijs",
    "typescript"
  ],
  "author": "ForeverSc",
  "license": "MIT",
  "dependencies": {
    "@pixi-essentials/transformer": "^3.0.4",
    "@types/lodash-es": "^4.17.10",
    "@types/uuid": "^9.0.6",
    "gsap": "^3.12.2",
    "lodash-es": "^4.17.21",
    "loglevel": "^1.8.1",
    "mp4-muxer": "^2.2.2",
    "pixi.js": "^7.3.2",
    "uuid": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vnve/vnve"
  }
}
